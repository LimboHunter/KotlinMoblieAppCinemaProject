<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название фильма:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название"
        android:layout_below="@id/textViewName"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textViewSides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/editTextName"/>

    <EditText
        android:id="@+id/editTextSides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите описание"
        android:layout_below="@id/textViewSides"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рейтинг фильма:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/editTextSides"/>

    <EditText
        android:id="@+id/editTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите рейтинг"
        android:layout_below="@id/textViewArea"
        android:inputType="numberDecimal"/>

    <Button
        android:backgroundTint="@android:color/holo_orange_dark"
        android:textColor="@color/black"
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить фильм"
        android:layout_marginTop="24dp"
        android:layout_below="@id/editTextArea"/>
</RelativeLayout>
